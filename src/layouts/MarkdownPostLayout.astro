---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, headings } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.data.title}>
  <p>Written by {frontmatter.data.author}</p>
  <div class="tags">
    {
      frontmatter.data.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
  <div id="test"><slot /></div>
  <aside id="toctest">
    *TOC TESTING*<ul>
      <li>
        <a href={`/posts/${frontmatter.slug}/#` + headings[0].slug}
          >{headings[0].text}</a>
      </li>
    </ul>
  </aside>
</BaseLayout>

<style>
  #toctest {
    position: fixed;
    right: 0;
    padding: 10px;
    top: 0;
    margin-top: 200px;
  }
  #test {
    margin-left: auto;
    margin-right: auto;
    max-width: 42rem;
    font-size: 20px;
  }
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
